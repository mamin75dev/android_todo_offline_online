<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddToDoOfflineActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/offline_add_todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="-----   Add Todo   -----"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_offline_title_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/offline_add_todo_title"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/edit_text"
            android:hint="Title"
            android:textColorHint="#333"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_offline_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_offline_title_input"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:hint="Description"
            android:minLines="5"
            android:textColorHint="#333"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/add_offline_worker_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/add_offline_description_input"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:hint="Worker"
            android:textColorHint="#333"
            android:textSize="20dp" />

        <DatePicker
            android:id="@+id/add_offline_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_offline_worker_input"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="24dp"
            android:background="#C9D9E1" />

        <RelativeLayout
            android:id="@+id/add_offline_submit_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:layout_below="@id/add_offline_date_picker"
            android:background="@drawable/offline_use_button"
            android:textColor="@color/white">

            <TextView
                android:id="@+id/add_offline_submit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/add_offline_submit_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/white"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>